{% extends 'base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/css/bootstrap-colorpicker.css') }}">
    <link rel="stylesheet" href="{{ asset('bundles/css/bootstrap-colorpicker.css.map') }}">

    <style>
        .color_actuel_event{
            width: 100px;
            height: 20px;
            background-color: {{ event.color }};
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Editer un évènement</h1>

    {{ form_start(edit_form) }}

    <div class="container-fluid">
        <div class="container">
            <div class="row">
                <div class="col-sm-3 col-sm-offset-3">
                    <p class="">Date de début d'évènement</p>
                    <div class="input-group">
                        {{ form_widget(edit_form.start) }}
                        {{ form_errors(edit_form.start) }}
                    </div>
                </div>
                <div class="col-md-3">
                    <p class="">Date de fin d'évènement</p>
                    <div class="input-group">
                        {{ form_widget(edit_form.end ) }}
                        {{ form_errors(edit_form.end) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Titre de l'évènement</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.titre , {'attr': {'class': 'form-control', 'placeholder': 'Titre de l\'évènement'}}) }}
                    {{ form_errors(edit_form.titre) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Description de l'évènement</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.contenu , {'attr': {'class': 'form-control', 'placeholder': 'Description de l\'évènement'}}) }}
                    {{ form_errors(edit_form.contenu) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Couleur actuelle: <div class="color_actuel_event"></div></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(edit_form.color , {'attr': {'placeholder': 'Modifier'}}) }}
                    {{ form_errors(edit_form.color) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="input-group">
                    {{ form_widget(edit_form.images, {'attr': {'class': 'help-block'}}) }}
                    {{ form_errors(edit_form.images) }}
                </div>
            </div>
        </div>

        <div class="edit_admin">
            <input class="btn btn-default edit_admin" type="submit" value="Modifier" />
            <a class="btn btn-default edit_admin"  href="{{ path('calendar_homepage') }}">Retour au calendrier</a>
        </div>
        {{ form_end(edit_form) }}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/js/js_colopicker/bootstrap-colorpicker.js') }}"></script>
    <script>
        $(function () {
            $('#events_color').colorpicker();
        });
    </script>
{% endblock %}