{% trans_default_domain 'FOSUserBundle' %}
<div class="row center-align "><br>
    <img class="brand-logo nav_bar_logo" src="{{ asset('bundles/family/images/family.png') }}" alt="logo">
</div>
{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
<div class="row form ">
    <div class="col s5 m3 l3"><i class="material-icons prefix">verified_user</i>
        {{ form_label(form.username) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">email</i>
        {{ form_label(form.email) }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">account_circle</i>
        {{ form_label(form.nom) }}
        {{ form_errors(form.nom) }}
        {{ form_widget(form.nom) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">account_circle</i>
        {{ form_label(form.prenom) }}
        {{ form_errors(form.prenom) }}
        {{ form_widget(form.prenom) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">location_on</i>
        {{ form_label(form.adresse) }}
        {{ form_errors(form.adresse) }}
        {{ form_widget(form.adresse) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">location_on</i>
        {{ form_label(form.code_postal) }}
        {{ form_errors(form.code_postal) }}
        {{ form_widget(form.code_postal) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">location_on</i>
        {{ form_label(form.ville) }}
        {{ form_errors(form.ville) }}
        {{ form_widget(form.ville) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">phone</i>
        {{ form_label(form.domicile) }}
        {{ form_errors(form.domicile) }}
        {{ form_widget(form.domicile) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">phone</i>
        {{ form_label(form.portable) }}
        {{ form_errors(form.portable) }}
        {{ form_widget(form.portable) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">phone</i>
        {{ form_label(form.box) }}
        {{ form_errors(form.box) }}
        {{ form_widget(form.box) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">today</i>
        {{ form_label(form.anniversaire) }}
        {{ form_errors(form.anniversaire) }}
        {{ form_widget(form.anniversaire) }}
    </div>
    <div class="col s5 m3 l3"><i class="material-icons prefix">vpn_key</i>
        {{ form_label(form.current_password) }}
        {{ form_errors(form.current_password) }}
        {{ form_widget(form.current_password) }}
    </div>

</div>
    {#{{ form_widget(edit_form) }}#}
<div class="col s5 m3 l3 center">
    <input class="waves-effect waves-light btn" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
{#</div><br>#}
{{ form_end(form) }}
