{% extends 'base.html.twig'%}

{% block title %}Calendar{% endblock %}
{% block stylesheet %}
{{ parent() }}


<link rel="stylesheet" href="{{ asset('bundles/family/css/fullcalendar.min.css') }}">
<link rel="stylesheet" media="print" href="{{ asset('bundles/family/css/fullcalendar.print.min.css') }}">
<link type="text/css" rel="stylesheet" href="{{ asset('bundles/family/css/calendar_main.css') }}">
<link type="text/css" rel="stylesheet" href="{{ asset('bundles/family/css/main.css') }}">


{% endblock %}



{% block body %}


	{% include "@Family/Default/nav.html.twig"  %}
	<br><br>



	<div id='calendar'></div>

	<div id="fullCalModal" class="modal fade">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span> <span class="sr-only">close</span></button>
					<h6 style="color:white" id="modalTime" class="modal-title"></h6>
				</div>
				<div class="modal-header">
					<h6 style="color: white" id="modalTitle" class="modal-title"></h6>
				</div>

				<div style="color:white" id="modalBody" class="modal-body">
					<p id="text_event"></p>
					<div id="imgevent"></div>
				</div>
				<div class="modal-footer">
					{% if is_granted("ROLE_SUPER_ADMIN") %}
						<a href="#" id="delete_event" class="btn btn-default">Supprimer</a>
						<a href="#" id="edit_event" class="btn btn-primary">Modifier</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>


	{% include "@Family/Default/footer.html.twig"  %}

{% endblock %}

