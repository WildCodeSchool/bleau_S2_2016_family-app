{%extends 'base.html.twig'%}
{% block title %}Countdown Listings{% endblock %}
{% block stylesheet%}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/family/css/materialize.min.css') }}" media="screen,projection">

    {#<link type="text/css" rel="stylesheet" href="{{ asset('bundles/family/css/style.css') }}">#}
    <link type="text/css" rel="stylesheet" href="{{ asset('bundles/family/css/main.css') }}">
{% endblock %}


{% block body %}

<div class="row col s12 m12 l12 center">
        {% include "@Family/Default/nav.html.twig"  %}
    <h1>Countdown Listings :</h1>
</div>
<div class="container">
    <div class="row">
        <table class="col s12 m12 l6 offset-l3 bordered highlight  centered">
            <thead>
                <tr>
                    <th data-field="id">Nom</th>
                    <th data-field="name">Prenom</th>
                    <th data-field="price">Anniversaire</th>
                    <th data-field="price">Jours restants</th>
                </tr>
            </thead>
            <tbody>
            {% for user in times %}
                <tr>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.anniversaire_string }}</td>
                    <td>{{ user.countdown }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
    <div class="row col s12 m6 l6 center">
        {% include "@Family/Default/footer.html.twig"  %}
    </div>


